•FOR:

 

#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;

void main()

{
    int fac,i,n;
    cout<<"Ingrese hasta que numero multiplicar"<<endl;
    cin>>n;
    fac=1;
    for(i=1;i<=n;i++)
   
        fac=fac*i;
   
    cout<<"El resultado sera"<<fac<<endl,
    getch();
}



•DO/WHILE:

#include "stdafx.h"

#include <iostream>

#include "conio.h"

 

using namespace std;

 

void main ()

 

{int factorial=1,contador=1,numero;

cout<<"Ingrese el numero del cual quiere obtener el factorial:  ";

cin>>numero;

do

 {factorial= factorial*contador;

 contador=contador+1;

 }

while (contador<=numero);

cout<<"El factorial es:  "<<factorial;

 

getch();

}



•WHILE:

 

#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;

void main()

{
    int fac,i,n;
    cout<<"Ingrese hasta que numero multiplicar"<<endl;
    cin>>n;
    fac=1;
    i=1;
    while(i<=n)
    {
        fac=fac*i;
        i++;
    }
    cout<<"El resultado sera"<<fac<<endl,
    getch();
}
